{
  "name": "linter-makensis",
  "version": "0.11.0",
  "description": "Atom linter plugin for NSIS, using makensis",
  "license": "MIT OR GPL-2.0",
  "author": {
    "name": "Jan T. Sott",
    "url": "http://github.com/idleberg"
  },
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode none --watch",
    "lint": "eslint ./src",
    "test": "npm run lint"
  },
  "keywords": [
    "nsis",
    "linter",
    "makensis"
  ],
  "main": "./lib/linter",
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/atom-linter-makensis.git"
  },
  "engines": {
    "atom": ">=1.19.0 <2.0.0"
  },
  "activationHooks": [
    "language-nsis:grammar-used"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "package-deps": [
    "linter:2.2.0",
    "linter-ui-default"
  ],
  "dependencies": {
    "atom-linter": "^10.0.0",
    "atom-package-deps": "^5.1.0",
    "makensis": "^0.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "babel-loader": "^8.0.6",
    "eslint": "^6.0.0",
    "eslint-plugin-import": "^2.17.3",
    "husky": "^2.4.1",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
