{
  "name": "linter-makensis",
  "version": "0.16.0",
  "description": "Atom linter plugin for NSIS, using makensis",
  "license": "MIT OR GPL-2.0",
  "author": {
    "name": "Jan T. Sott",
    "url": "http://github.com/idleberg"
  },
  "scripts": {
    "build": "npm run clean && NODE_ENV=production rollup -c",
    "clean": "rimraf ./lib",
    "dev": "npm run start",
    "lint": "eslint --cache --fix ./src",
    "prepublishOnly": "npm run build",
    "start": "NODE_ENV=development rollup -w -c",
    "test": "npm run lint"
  },
  "keywords": [
    "nsis",
    "linter",
    "makensis"
  ],
  "main": "./lib/linter",
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/atom-linter-makensis.git"
  },
  "engines": {
    "atom": ">=1.19.0 <2.0.0"
  },
  "activationHooks": [
    "language-nsis:grammar-used"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "package-deps": [
    {
      "name": "linter",
      "minimumVersion": "2.0.0"
    },
    {
      "name": "linter-ui-default"
    }
  ],
  "dependencies": {
    "atom-linter": "^10.0.0",
    "atom-package-deps": "^7.0.3",
    "atom-satisfy-dependencies": "^0.3.0",
    "makensis": "^0.23.2",
    "open": "^7.2.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-typescript": "^8.1.0",
    "@types/atom": "^1.40.5",
    "@types/node": "^14.14.16",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "eslint": "^7.16.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-json": "^2.1.2",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.35.1",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}
