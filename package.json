{
  "name": "linter-makensis",
  "version": "0.16.1",
  "description": "Atom linter plugin for NSIS, using makensis",
  "license": "MIT OR GPL-2.0",
  "author": {
    "name": "Jan T. Sott",
    "url": "http://github.com/idleberg"
  },
  "scripts": {
    "build": "node ./tools/build.mjs",
    "clean": "rimraf ./lib",
    "dev": "npm run start",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:js": "eslint ./src --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "start": "cross-env ESBUILD_WATCH=true node ./tools/build.mjs",
    "test": "npm run lint"
  },
  "keywords": [
    "nsis",
    "linter",
    "makensis"
  ],
  "main": "./lib/linter",
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/atom-linter-makensis.git"
  },
  "engines": {
    "atom": ">=1.19.0 <2.0.0"
  },
  "activationHooks": [
    "language-nsis:grammar-used"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "package-deps": [
    {
      "name": "linter",
      "minimumVersion": "2.0.0"
    },
    {
      "name": "linter-ui-default"
    }
  ],
  "dependencies": {},
  "devDependencies": {
    "@atxm/developer-console": "^0.5.0",
    "@types/atom": "^1.40.5",
    "@types/node": "^14.14.16",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "atom-linter": "^10.0.0",
    "atom-package-deps": "^7.0.3",
    "atom-satisfy-dependencies": "^0.3.0",
    "esbuild": "^0.12.1",
    "eslint": "^7.27.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-json": "^2.1.2",
    "husky": ">=4 <5",
    "lint-staged": "^10.5.3",
    "makensis": "^0.23.2",
    "open": "^8.0.6",
    "rimraf": "^3.0.2",
    "tslib": "^2.2.0",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}
